@import 'nib';
html, body
  height 100%
  width 100%
header
  background linear-gradient(top,  #666 0%,#fff 100% )
  min-height : 100px
  color #fff
  width 100%
  display table
  & p
    display table-cell
    vertical-align middle
    padding 20px
    text-shadow: 2px 2px 7px #000
    font-size 35px
#homeCarouselInner
  width 100%
.carousel-window
  position relative
  overflow hidden
  margin 0 auto
  width 300%
  min-height 161px
  ul
    margin 0
    padding 0
    list-style none
    position absolute
    /* width xxx%  is written dinamically with JavaScript */
    -webkit-transition -webkit-transform 1s ease-in-out
    -moz-transition -moz-transform 1s ease-in-out
    -ms-transition -ms-transform 1s ease-in-out
    -o-transition -o-transform 1s ease-in-out
    transition transform 1s ease-in-out

  li
    margin 0
    padding 0
    float left

    a
      img
        height 100%
        width 100%
        -webkit-background-size cover
        background-size cover
  position relative
  padding 0
  background #fff

.arrowLeft,
.arrowRight
  font-size 25px
  color #fff
  margin-left 0px
  position relative
  top 37%
  padding 13px
  cursor pointer
  display none
  background #45484d
  background -moz-linear-gradient(left,  #45484d 0%, #000000 100%)
  background -webkit-gradient(linear, left top, right top, color-stop(0%,#45484d), color-stop(100%,#000000))
  background -webkit-linear-gradient(left,  #45484d 0%,#000000 100%)
  background -o-linear-gradient(left,  #45484d 0%,#000000 100%)
  background -ms-linear-gradient(left,  #45484d 0%,#000000 100%)
  background linear-gradient(to right,  #45484d 0%,#000000 100%)
.arrowLeft
  float left
  -webkit-border-top-right-radius 4px
  -webkit-border-bottom-right-radius 4px
  -moz-border-radius-topright 4px
  -moz-border-radius-bottomright 4px
  border-top-right-radius 4px
  border-bottom-right-radius 4px
.arrowRight
  float right
  -webkit-border-top-left-radius 4px
  -webkit-border-bottom-left-radius 4px
  -moz-border-radius-topleft 4px
  -moz-border-radius-bottomleft 4px
  border-top-left-radius 4px
  border-bottom-left-radius 4px

.pagination
  ul
    position static
    margin 0
    padding 5px
    text-align center
    list-style none
  li
    position static
    float none
    display inline
    margin 0 10px
    padding 0
    width auto
    height auto
    background none
  a
    display inline-block
    padding 0
    outline 0
    width 10px
    height 10px
    text-decoration none
    text-indent -10000px
    cursor pointer
    span
      width 25px
      height 25px
      border-radius 50%
      background-color #ccc
      display block

  .on
    a
      cursor default
    span
      width 25px
      height 25px
      border-radius 50%
      display block
      background #45484d
      background -moz-linear-gradient(left,  #45484d 0%, #000000 100%)
      background -webkit-gradient(linear, left top, right top, color-stop(0%,#45484d), color-stop(100%,#000000))
      background -webkit-linear-gradient(left,  #45484d 0%,#000000 100%)
      background -o-linear-gradient(left,  #45484d 0%,#000000 100%)
      background -ms-linear-gradient(left,  #45484d 0%,#000000 100%)
      background linear-gradient(to right,  #45484d 0%,#000000 100%)
#loading
  position: absolute
  left: 43%;
  top: 36%;
  display none

